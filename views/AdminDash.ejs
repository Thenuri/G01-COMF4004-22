    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        var x;

        document.addEventListener("DOMContentLoaded", getAccounts);

        function getAccounts() {

            axios.get('/accounts/getallaccounts')
            .then( (res) => {
                let accounts = res.data;
                console.log(accounts)
                displayAccounts(accounts)

            })
            .catch(e=> {
                console.log(e)
                if(e.response.data){
                    alert(e.response.data.error.message)
                }
            })
            
        }

        function displayAccounts(accounts) {
            console.log("accounts arr", accounts)
            let clientAccountsTableBody = document.getElementById("client-users");
            let ownerAccountsTableBody = document.getElementById("owner-users");

            clientAccountsTableBody.innerHTML = "";
            ownerAccountsTableBody.innerHTML = "";

            accounts.forEach( account => {
                let accountStatusChangeBtn;
                if (account.Account_Status === "active") {
                    accountStatusChangeBtn = `
                        <button class="btn btn-outline-danger rounded-pill mx-auto my-1" data-account-id=${account.Account_ID} onclick="suspendAccount(event)">Suspend</button>`
                } else if (account.Account_Status === "suspended") {
                    accountStatusChangeBtn = `
                        <button class="btn btn-outline-dark rounded-pill mx-auto my-1" data-account-id=${account.Account_ID} onclick="activateAccount(event)">Activate</button>`
                } else {
                    return
                }


                if (account.Account_Type === "owner") {
                    
                    // for the ratings 0 means no one has rated
                    let rating;
                    if (account.Rating === 0) {
                        rating = "N/A";
                    } else {
                        rating = account.Rating;
                    }

                    ownerAccountsTableBody.innerHTML += `
                                                        <tr>
                                                            <td>${account.Account_ID}</td>
                                                            <td>${account.Owner_ID}</td>
                                                            <td>${account.Name}</td>
                                                            <td>${account.Address}</td>
                                                            <td>${account.Contact_No}</td>
                                                            <td>${rating}</td>
                                                            <td>${account.No_Of_Ratings}</td>
                                                            <td>${account.Account_Status}</td>
                                                            <td>${accountStatusChangeBtn}</td>
                                                        
                                                        </tr>
                    
                                                        `
                } else if ( account.Account_Type === "client") {
                    clientAccountsTableBody.innerHTML += `
                                                        <tr>
                                                            <td>${account.Account_ID}</td>
                                                            <td>${account.Client_ID}</td>
                                                            <td>${account.Name}</td>
                                                            <td>${account.Address}</td>
                                                            <td>${account.Contact_No}</td>
                                                            <td>${account.Account_Status}</td>
                                                            <td>${accountStatusChangeBtn}</td>
                                                        
                                                        </tr>
                    
                                                        `
                }

            })

        }

        function suspendAccount(event) {
             let accountId = event.target.dataset.accountId;

             if (confirm("Do you want to suspend this account?")) {
              // axios put
            // url path
            const urlPath = `/accounts/suspend/${accountId}`

            // For redirect param
            const params = new URLSearchParams(window.location.search);
            const redirectURL = params.get("redirect")
            let url;
            if (redirectURL) {
                url =`${urlPath}?redirect=${redirectURL}`;
            } else {
                url = `${urlPath}`;
            }

            axios.put(url)
            .then( (res) => {

                axiosReqUrl = window.location.origin + res.config.url  // url axios sent the request to

                //  if the url axios sent the request and the respose url from the server doesnt match a redirection has occured
                if(axiosReqUrl !== res.request.responseURL) {
                    window.location.href = res.request.responseURL;  // set the window location to redirect
                }

            })
            .catch(e=> {
                // console.log(e)
                if(e.response.data.error.message){
                    alert(e.response.data.error.message)
                }
            })

            getAccounts();
        }
    }


        
        function activateAccount(event) {
             let accountId = event.target.dataset.accountId;

             if (confirm("Do you want to activate this account?")) {

                  // axios put
                // url path
                const urlPath = `/accounts/activate/${accountId}`

                // For redirect param
                const params = new URLSearchParams(window.location.search);
                const redirectURL = params.get("redirect")
                let url;
                if (redirectURL) {
                    url =`${urlPath}?redirect=${redirectURL}`;
                } else {
                    url = `${urlPath}`;
                }

                axios.put(url)
                .then( (res) => {

                    axiosReqUrl = window.location.origin + res.config.url  // url axios sent the request to

                    //  if the url axios sent the request and the respose url from the server doesnt match a redirection has occured
                    if(axiosReqUrl !== res.request.responseURL) {
                        window.location.href = res.request.responseURL;  // set the window location to redirect
                    }

                })
                .catch(e=> {
                    // console.log(e)
                    if(e.response.data.error.message){
                        alert(e.response.data.error.message)
                    }
                })

                getAccounts();
             }

            
        }

